generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               BigInt        @id @default(autoincrement())
  name             String        @db.VarChar(255)
  email            String        @unique @db.VarChar(255)
  emailVerifiedAt  DateTime?     @map("email_verified_at")
  password         String        @db.VarChar(255)
  rememberToken    String?       @map("remember_token") @db.VarChar(100)
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")
  deletedAt        DateTime?     @map("deleted_at")
  role             Role          @default(PLAYER)
  avatar           String?
  characters       Character[]
  ownedParties     Party[]       @relation("PartyOwner")
  partyMemberships PartyMember[] @relation("PartyMemberUser")
  tokens           Token[]

  @@map("users")
}

model Character {
  id        BigInt   @id @default(autoincrement())
  userId    BigInt   @map("user_id")
  name      String   @default("Desconhecido") @db.VarChar(255)
  data      Json
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("characters")
}

model Party {
  id          BigInt        @id @default(autoincrement())
  ownerId     BigInt        @map("owner_id")
  name        String        @db.VarChar(255)
  description String
  banner      String?
  type        PartyType     @default(PUBLIC)
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  owner       User          @relation("PartyOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     PartyMember[]

  @@map("parties")
}

model PartyMember {
  id        BigInt   @id @default(autoincrement())
  partyId   BigInt   @map("party_id")
  userId    BigInt   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  party     Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  user      User     @relation("PartyMemberUser", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([partyId, userId])
  @@map("party_members")
}

model Token {
  id         BigInt    @id @default(autoincrement())
  userId     BigInt    @map("user_id")
  token      String    @unique @db.VarChar(64)
  name       String    @default("api_token")
  abilities  String?
  lastUsedAt DateTime? @map("last_used_at")
  expiresAt  DateTime? @map("expires_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@map("personal_access_tokens")
}

model Document {
  id         BigInt   @id @default(autoincrement())
  name       String   @db.VarChar(255)
  version    String   @db.VarChar(50)
  coverImage String   @map("cover_image")
  pdfFile    String   @map("pdf_file")
  isWip      Boolean  @default(false) @map("is_wip")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("documents")
}

enum Role {
  ADMIN
  GM
  PLAYER
}

enum PartyType {
  PUBLIC
  PRIVATE
}
